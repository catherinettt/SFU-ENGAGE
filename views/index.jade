div#header
	div.row
		div.ten.columns
			h1 #{title}
		div.two.columns#userbox
			h5  #{ user.name }
			a log out
		
	div.row.hide-for-small#nav
		div.nine.columns
			ul.nav-bar#options
				li
					a(href="#") ALL RESOURCES
				li
					a(href="#") YOUR CONTRIBUTIONS
				li
					a(href="#") STARRED
				li
					a(href="#") INSTRUCTOR POSTS
		div.two.columns
			ul.nav-bar
				li.has-flyout#courselist
					a(href="#") COURSES
					a(href="#", class="flyout-toggle")
						span
					ul.flyout
						each i in courses 
							li.courses
								a(href="#") #{i}
div.row#contents
	- var counter = 0 
	each name , course in user.courses
		- var coursename = course
		each article in name
			div.three.columns
				div.innercontents
					span #{coursename}
					h5 #{article.title}
					div.articlepreview(id = "preview_#{counter}")
					script(type='text/javascript')
						$('div#preview_#{counter}').load("#{article.path} p");
					
					- counter = counter +1	
				
	
